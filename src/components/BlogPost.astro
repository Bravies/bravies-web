---
const { title, brief, url, tags } = Astro.props;
---

<li class="bg-white mb-16 last:mb-0" data-tags={tags}>
    <h2 class="text-xl font-bold mb-2 text-gray-700 hover:text-orange-600 transition-all"><a href={`/anxiety-resources/${url}`} class="block">{title}</a></h2>
    <p class="text-gray-600">{brief}</p>
    <ul class="mt-4 flex gap-4 content-center">
      {tags.map((tag: string) => (
        <li>
          <a href={`/anxiety-resources?type=${tag}`}>
            <span class="inline-flex items-center rounded-md bg-orange-50 px-2 py-1 text-xs font-medium text-orange-700 ring-1 ring-inset ring-orange-600/10">{tag}</span>
          </a>
        </li>
      ))}
    </ul>
</li>
