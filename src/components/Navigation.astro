---
interface Props {
    hideSignUp?: boolean;
}

const { hideSignUp } = Astro.props;
---

<div class="bg-white">
    <nav class="flex p-8 mx-auto max-w-7xl gap-8 items-center">
        <a href="/">Bravies</a>
        <div class="flex-grow" />
        <a href="/about">About</a>
        <a href="/articles">Blog</a>
        <a class="border-l pl-8 py-2" href="https://app.bravies.ca/sign-in">Sign In</a>
        {!hideSignUp && (
            <button x-on:click="open = true" class="rounded-md bg-orange-600 px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-orange-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-orange-600 w-40">Get Started</button>
        )}
    </nav>
</div>
